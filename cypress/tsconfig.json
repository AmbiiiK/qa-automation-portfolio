{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": [
      "node",
      "cypress",
      "cypress-plugin-api"
    ]
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules"]
}